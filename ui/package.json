{
  "name": "angular-electron-template",
  "version": "0.0.0",
  "private": "true",
  "main": "app/dist/main.js",
  "author": {
    "name": "Carlos Lapao",
    "email": "cjlapao@gmail.com",
    "url": "https://carloslapao.com"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ng": "ng",
    "preinstallapp": "npm --prefix ./app install ./app",
    "installapp": "npm run preinstallapp && npm install",
    "start": "npm-run-all -p electron:serve ng:serve",
    "build": "npm run electron:serve-tsc && ng build --base-href ./",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "ng serve -c web -o",
    "electron:serve-tsc": "tsc -p app/tsconfig.json",
    "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && npx electron . --serve",
    "electron:local": "npm run build:prod && npx electron .",
    "electron:build": "npm run build:prod && electron-builder build --publish=never",
    "test": "ng test --watch=false",
    "test:watch": "ng test",
    "e2e": "npm run build:prod && cross-env TS_NODE_PROJECT='e2e/tsconfig.e2e.json' mocha --timeout 300000 --require ts-node/register e2e/**/*.e2e.ts",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "lint": "ng lint"
  },
  "dependencies": {
    "@angular/common": "12.2.2",
    "@angular/compiler": "12.2.2",
    "@angular/core": "12.2.2",
    "@angular/forms": "12.2.2",
    "@angular/language-service": "12.2.2",
    "@angular/platform-browser": "12.2.2",
    "@angular/platform-browser-dynamic": "12.2.2",
    "@angular/router": "12.2.2",
    "@electron/remote": "1.2.1",
    "rxjs": "7.3.0",
    "tslib": "2.3.1",
    "zone.js": "0.11.4"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "12.1.1",
    "@angular-devkit/build-angular": "12.2.2",
    "@angular-eslint/builder": "12.3.1",
    "@angular-eslint/eslint-plugin": "12.3.1",
    "@angular-eslint/eslint-plugin-template": "12.3.1",
    "@angular-eslint/schematics": "12.3.1",
    "@angular-eslint/template-parser": "12.3.1",
    "@angular/cli": "12.2.2",
    "@angular/compiler-cli": "12.2.2",
    "@ngx-translate/core": "13.0.0",
    "@ngx-translate/http-loader": "6.0.0",
    "@types/jasmine": "3.8.2",
    "@types/jasminewd2": "2.0.10",
    "@types/mocha": "9.0.0",
    "@types/node": "16.7.1",
    "@typescript-eslint/eslint-plugin": "4.29.3",
    "@typescript-eslint/parser": "4.29.3",
    "chai": "4.3.4",
    "conventional-changelog-cli": "2.1.1",
    "cross-env": "7.0.3",
    "electron": "13.2.1",
    "electron-builder": "22.11.7",
    "electron-reload": "1.5.0",
    "eslint": "7.32.0",
    "eslint-plugin-import": "2.24.1",
    "eslint-plugin-jsdoc": "36.0.7",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "jasmine-core": "3.9.0",
    "jasmine-spec-reporter": "7.0.0",
    "karma": "6.3.4",
    "karma-coverage-istanbul-reporter": "3.0.3",
    "karma-electron": "7.0.0",
    "karma-jasmine": "4.0.1",
    "karma-jasmine-html-reporter": "1.7.0",
    "mocha": "9.1.0",
    "nan": "2.15.0",
    "npm-run-all": "4.1.5",
    "spectron": "15.0.0",
    "ts-node": "10.2.1",
    "typescript": "~4.3.5",
    "wait-on": "6.0.0",
    "webdriver-manager": "12.1.8"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
